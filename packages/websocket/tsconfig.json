{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"declaration": true,
		"outDir": "dist",
		"types": ["bun-types"],
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@orijs/logging": ["../logging/src/index.ts"],
			"@orijs/test-utils": ["../test-utils/src/index.ts"]
		}
	},
	"include": ["src/**/*", "__tests__/**/*"],
	"exclude": ["node_modules"]
}

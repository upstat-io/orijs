{
	"name": "@upstat/orijs",
	"version": "0.0.1",
	"description": "Lightweight NestJS-inspired framework for Bun",
	"private": true,
	"main": "src/index.ts",
	"module": "src/index.ts",
	"types": "src/index.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"import": "./src/index.ts",
			"require": "./src/index.ts",
			"default": "./src/index.ts"
		},
		"./sql": {
			"types": "./packages/sql/src/index.ts",
			"import": "./packages/sql/src/index.ts",
			"require": "./packages/sql/src/index.ts",
			"default": "./packages/sql/src/index.ts"
		}
	},
	"workspaces": [
		"packages/*",
		"example"
	],
	"license": "MIT",
	"scripts": {
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"typecheck": "tsc --noEmit",
		"lint": "oxlint --config oxlint.json packages/ example/src",
		"lint:fix": "oxlint --config oxlint.json --fix packages/ example/src",
		"format": "prettier --write \"packages/**/*.ts\" \"example/**/*.ts\"",
		"format:check": "prettier --check \"packages/**/*.ts\" \"example/**/*.ts\""
	},
	"dependencies": {
		"@sinclair/typebox": "^0.34.33",
		"fast-json-stable-stringify": "^2.1.0"
	},
	"devDependencies": {
		"@orijs/test-utils": "*",
		"@testcontainers/redis": "^10.7.2",
		"@types/bun": "^1.2.15",
		"bullmq": "^5.0.0",
		"ioredis": "5.8.2",
		"oxlint": "^0.16.0",
		"testcontainers": "^10.7.2",
		"typescript": "^5.9.2"
	},
	"peerDependencies": {
		"ioredis": "^5.4.0"
	},
	"peerDependenciesMeta": {
		"ioredis": {
			"optional": true
		}
	},
	"overrides": {
		"ioredis": "5.8.2"
	}
}
